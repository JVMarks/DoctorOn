<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DoctorOn</title>

    <link href="~/Assets/favico.ico" hreflang="en-us" rel="icon" type="image/png">

    <link rel="stylesheet" href="~/Content/global.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,700;0,900;1,300;1,500&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">

</head>
<body>

    @Html.Partial("_Menu")
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <div class="footer__copyright">
            <div class="bottom">
                <span>&copy; 2020 - DoctorOn</span>
            </div>
        </div>

        <div class="footer__links">
            <a href="#" target="_blank" title="ListViewImgs" style="text-decoration:none;">
                <span class="text">ListViewImgs</span>
                <img alt="ListViewImgs" class="parceiros" src="~/Assets/Parceiros/parceiro1.png">
            </a>
            <a href="#" target="_blank" title="GreenPeople" style="text-decoration:none;">
                <span class="text">GreenPeople</span>
                <img alt="GreenPeople" class="parceiros" src="~/Assets/Parceiros/parceiro2.png">
            </a>
        </div>

        <div class="footer__links">
            <a href="#" target="_blank" title="facebook" style="text-decoration:none;">
                <span class="text">facebook</span>
                <img alt="facebook" src="~/Assets/social/facebook.svg">
            </a>
            <a href="#" target="_blank" title="twitter" style="text-decoration:none;">
                <span class="text">twitter</span>
                <img alt="twitter" src="~/Assets/social/twitter.svg">
            </a>
            <a href="#" target="_blank" title="instagram" style="text-decoration:none;">
                <span class="text">instagram</span>
                <img alt="instagram" src="~/Assets/social/instagram.svg" />
            </a>
            <a href="#" target="_blank" title="linkedin" style="text-decoration:none;">
                <span class="text">linkedin</span>
                <img alt="linkedin" src="~/Assets/social/linkedin.svg">
            </a>
        </div>
    </footer>
     <button id="top-button"><img alt="up" src="~/Assets/Icone/seta.png"></button>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/main.js")
    @RenderSection("scripts", required: false)
</body>
</html>