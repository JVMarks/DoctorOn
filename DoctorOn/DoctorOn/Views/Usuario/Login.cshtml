<link rel="stylesheet" href="~/Content/loginout.css" />

<div class="bgline"></div>
<div class="login">
    <div class="login-wrap">
        <div id="signinbox">
            <form id="signinform" action="@Url.Action("Authentication")" method="post">
                <h3 class="formlabel">Faça seu Login e veja as novidades</h3>
                @Html.ValidationMessage("login.Invalido", new { @class = "alert" })

                <div class="center">
                    <input id="login" name="Email" type="text" class="inputfield" placeholder="Username" required />

                    <input id="senha" name="Senha" type="password" class="inputfield" placeholder="Password" required />
                </div>
                <input type="submit" value="Entrar" id="loginsubmit" class="inputsubmit" />
            </form>

            <div class="spf">
                @Html.ActionLink("Crie já sua conta", "Create", "Usuario", null, new { style = "text-decoration:none" })
            </div>
        </div>
    </div>
</div>